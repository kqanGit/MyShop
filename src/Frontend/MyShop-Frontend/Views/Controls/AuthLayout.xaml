<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Name="Root"
    x:Class="MyShop_Frontend.Views.Controls.AuthLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop_Frontend.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Welcome Section -->
        <Grid Grid.Column="0">
            <Image  Source="/Assets/LoginImage.jpg" Stretch="UniformToFill"
                    HorizontalAlignment="Right"/>
            <StackPanel Spacing="15">

                <StackPanel Margin="20" Orientation="Horizontal" Spacing="6" >
                     <Image Source="ms-appx:///Assets/AppLogo.svg" Width="32" Height="32" Stretch="Uniform"/>
                    <TextBlock Foreground="#101010"
                               Opacity="0.75"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Top">
                        <Run Text="MyShop "/>
                        <Run Text="{x:Bind AppVersion, Mode=OneWay}"/>
                    </TextBlock>
                 </StackPanel>


                <TextBlock Foreground="#FFFFFF"
                           FontSize="100"
                           FontWeight="Bold"
                           Margin="20"
                           LineHeight="110"
                           LineStackingStrategy="BlockLineHeight">
                    <Run Text="Welcome"/>
                    <LineBreak/>
                    <Run Text="Back!"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Frame x:Name="AuthFrame" Grid.Column="1" Background="#E6E8FF">
            <ContentPresenter x:Name="Presenter"
                Content="{Binding FormContent, ElementName=Root}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Frame>
    </Grid>
</UserControl>
<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop_Frontend.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop_Frontend.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#14000000"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#7A000000"/>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#151D48"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#151D48"/>
        </Style>

        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
        </Style>

        <Style x:Key="DeltaText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="32,22,32,24">
        <StackPanel Spacing="14">

            <!-- Header like the screenshot -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Today's Sales" Style="{StaticResource SectionTitle}"/>
                    <TextBlock Text="Sales Summary" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                </StackPanel>

                <Border Grid.Column="1"
                        Background="#F4F6F8"
                        CornerRadius="12"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <TextBlock Text="Today" FontWeight="SemiBold" Foreground="#151D48"/>
                </Border>
            </Grid>

            <!-- 5 cards row (Total Sales / Profit / Orders / New Customers / Total Products) -->
            <Grid ColumnSpacing="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Sales -->
                <Border Style="{StaticResource CardBorder}" Background="#FFEFF1" MinHeight="140">
                    <StackPanel Spacing="10">
                        <Border Width="34" Height="34" CornerRadius="17" Background="#FFD6DA">
                            <Viewbox>
                                <FontIcon Glyph="&#xF1D1;" FontFamily="Segoe Fluent Icons" Foreground="#FF4D67"/>
                            </Viewbox>
                        </Border>

                        <TextBlock Text="{x:Bind TotalSalesTodayText}" Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Total Sales" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{x:Bind TotalSalesDeltaText}" Style="{StaticResource DeltaText}"/>
                    </StackPanel>
                </Border>

                <!-- Profit -->
                <Border Grid.Column="1" Style="{StaticResource CardBorder}" Background="#FFF7E8" MinHeight="140">
                    <StackPanel Spacing="10">
                        <Border Width="34" Height="34" CornerRadius="17" Background="#FFE7BD">
                            <Viewbox>
                                <FontIcon Glyph="&#xEAFD;" FontFamily="Segoe Fluent Icons" Foreground="#FF9F43"/>
                            </Viewbox>
                        </Border>

                        <TextBlock Text="{x:Bind ProfitTodayText}" Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Profit" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{x:Bind ProfitDeltaText}" Style="{StaticResource DeltaText}"/>
                    </StackPanel>
                </Border>

                <!-- Orders Today -->
                <Border Grid.Column="2" Style="{StaticResource CardBorder}" Background="#E9FFF1" MinHeight="140">
                    <StackPanel Spacing="10">
                        <Border Width="34" Height="34" CornerRadius="17" Background="#BFF2CF">
                            <Viewbox>
                                <FontIcon Glyph="&#xE8CB;" FontFamily="Segoe Fluent Icons" Foreground="#2ECC71"/>
                            </Viewbox>
                        </Border>

                        <TextBlock Text="{x:Bind OrdersTodayText}" Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Orders Today" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{x:Bind OrdersDeltaText}" Style="{StaticResource DeltaText}"/>
                    </StackPanel>
                </Border>

                <!-- New Customers -->
                <Border Grid.Column="3" Style="{StaticResource CardBorder}" Background="#F2EAFF" MinHeight="140">
                    <StackPanel Spacing="10">
                        <Border Width="34" Height="34" CornerRadius="17" Background="#E2CEFF">
                            <Viewbox>
                                <FontIcon Glyph="&#xE77B;" FontFamily="Segoe Fluent Icons" Foreground="#8E44AD"/>
                            </Viewbox>
                        </Border>

                        <TextBlock Text="{x:Bind NewCustomersTodayText}" Style="{StaticResource StatValue}"/>
                        <TextBlock Text="New Customers" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{x:Bind CustomersDeltaText}" Style="{StaticResource DeltaText}"/>
                    </StackPanel>
                </Border>

                <!-- Total Products (Option A) -->
                <Border Grid.Column="4" Style="{StaticResource CardBorder}" Background="#EEF2FF" MinHeight="140">
                    <StackPanel Spacing="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- icon bubble -->
                            <Border Width="34" Height="34" CornerRadius="17" Background="#DDE4FF">
                                <Viewbox>
                                    <FontIcon Glyph="&#xE8A7;" FontFamily="Segoe Fluent Icons" Foreground="#3B82F6"/>
                                </Viewbox>
                            </Border>

                            <TextBlock Grid.Column="1"
                           Text="Total Products"
                           Style="{StaticResource StatLabel}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                            <!-- badge -->
                            <Border Grid.Column="2"
                        Background="#DCFCE7"
                        CornerRadius="999"
                        Padding="10,4"
                        VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Ellipse Width="7" Height="7" Fill="#22C55E" VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Bind InStockText}" FontSize="12" Foreground="#15803D" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <TextBlock Text="{x:Bind TotalProductsText}" Style="{StaticResource StatValue}"/>

                        <!-- stock health -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Stock health" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind StockHealthText}" FontSize="12" Foreground="#3B82F6" FontWeight="SemiBold"/>
                        </Grid>

                        <ProgressBar Value="{x:Bind StockHealthValue}"
                         Maximum="100"
                         Height="8"
                         Background="White"
                         Foreground="#3B82F6"/>
                    </StackPanel>
                </Border>
            </Grid>


            <!-- CHART + RECENT 3 ORDERS -->
            <Grid ColumnSpacing="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Monthly revenue chart -->
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel Spacing="12">
                        <StackPanel>
                            <TextBlock Text="Revenue in the current month" Style="{StaticResource SectionTitle}"/>
                            <TextBlock Text="{x:Bind CurrentMonthText}" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                        </StackPanel>

                        <Grid Height="220" Margin="0,6,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="#12000000" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="1" BorderBrush="#12000000" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="2" BorderBrush="#12000000" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="3" BorderBrush="#12000000" BorderThickness="0,1,0,0"/>
                            </Grid>

                            <ItemsControl ItemsSource="{x:Bind MonthlyRevenue}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="14" VerticalAlignment="Bottom"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="local:RevenueBar">
                                        <StackPanel Width="28" VerticalAlignment="Bottom" Spacing="6">
                                            <Rectangle Height="{x:Bind Height}"
                                                       RadiusX="6" RadiusY="6"
                                                       Fill="#1F6FEB"
                                                       VerticalAlignment="Bottom"/>
                                            <TextBlock Text="{x:Bind Label}"
                                                       FontSize="10"
                                                       Foreground="{StaticResource MutedTextBrush}"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <TextBlock Text="(Weekly revenue bars â€“ placeholder)"
                                   FontSize="12"
                                   Foreground="{StaticResource MutedTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Recent 3 orders -->
                <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Latest 3 orders" Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Order / Customer" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <TextBlock Grid.Column="1" Text="Total" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                        </Grid>

                        <ItemsControl ItemsSource="{x:Bind Recent3Orders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:RecentOrder">
                                    <Border BorderBrush="#11000000" BorderThickness="0,0,0,1" Padding="0,10">
                                        <Grid ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Spacing="2">
                                                <TextBlock Text="{x:Bind OrderId}" FontWeight="SemiBold" Foreground="#151D48"/>
                                                <TextBlock Text="{x:Bind Customer}" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                                                <TextBlock Text="{x:Bind TimeText}" FontSize="11" Foreground="{StaticResource MutedTextBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Spacing="2">
                                                <TextBlock Text="{x:Bind TotalText}" FontWeight="SemiBold" Foreground="#151D48" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{x:Bind Status}" FontSize="12" Foreground="{StaticResource MutedTextBrush}" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </Border>
            </Grid>

            <!-- TOP SELLERS + LOW STOCK -->
            <Grid ColumnSpacing="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource CardBorder}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Top 5 best-selling products" Style="{StaticResource SectionTitle}"/>

                        <ItemsControl ItemsSource="{x:Bind Top5BestSellers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:TopSeller">
                                    <Grid Margin="0,8" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{x:Bind Name}" Foreground="#151D48" VerticalAlignment="Center"/>

                                        <Grid Grid.Column="1" Height="14" VerticalAlignment="Center">
                                            <Border Background="#EEF2FF" CornerRadius="8"/>
                                            <Border Background="#3B82F6"
                                                    CornerRadius="8"
                                                    HorizontalAlignment="Left"
                                                    Width="{x:Bind BarWidth}"/>
                                        </Grid>

                                        <TextBlock Grid.Column="2"
                                                   Text="{x:Bind SoldText}"
                                                   Foreground="{StaticResource MutedTextBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardBorder}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Top 5 low stock (  5 )" Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Product" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                            <TextBlock Grid.Column="1" Text="Left" FontSize="12" Foreground="{StaticResource MutedTextBrush}"/>
                        </Grid>

                        <ItemsControl ItemsSource="{x:Bind LowStockTop5}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:LowStockProduct">
                                    <Grid Padding="0,10" BorderBrush="#11000000" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{x:Bind Name}" Foreground="#151D48"/>

                                        <Border Grid.Column="1"
                                                Background="{x:Bind BadgeBg}"
                                                CornerRadius="10"
                                                Padding="10,2"
                                                HorizontalAlignment="Right">
                                            <TextBlock Text="{x:Bind RemainingText}"
                                                       Foreground="{x:Bind BadgeFg}"
                                                       FontSize="12"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>

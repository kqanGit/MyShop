<Page
    x:Class="MyShop_Frontend.Views.Pages.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop_Frontend.ViewModels.Orders"
    xmlns:converters="using:MyShop_Frontend.Helpers.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:OrderViewModel/>
    </Page.DataContext>
    
    <Page.Resources>
         <converters:DateToFormattedStringConverter x:Key="DateConverter"/>
         <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Add other converters if needed -->
        <Style x:Key="PrimaryCtaButton" TargetType="Button">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Order Management"
               FontSize="24"
               FontWeight="SemiBold"
               VerticalAlignment="Center"/>

            <Button Grid.Column="1"
            Style="{StaticResource PrimaryCtaButton}"
            Click="CreateOrder_Click"
            VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- plus icon -->
                    <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    <TextBlock Text="Create Order" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Spacing="12" Margin="0,0,0,24">
            <StackPanel>
                 <TextBlock Text="Search" FontWeight="SemiBold" Margin="0,0,0,4"/>
                 <TextBox PlaceholderText="Search by Order Code..." 
                          Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
           
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                     <TextBlock Text="From Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                     <CalendarDatePicker HorizontalAlignment="Stretch" Date="{Binding FromDate, Mode=TwoWay}" PlaceholderText="mm/dd/yyyy"/>
                </StackPanel>

                 <StackPanel Grid.Column="1">
                     <TextBlock Text="To Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                     <CalendarDatePicker HorizontalAlignment="Stretch" Date="{Binding ToDate, Mode=TwoWay}" PlaceholderText="mm/dd/yyyy"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Clear Filters" Command="{Binding ClearFilterCommand}" VerticalAlignment="Bottom"/>
            </Grid>
        </StackPanel>

        <!-- Header Row -->
        <Border Grid.Row="2" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Height="40" Margin="0,0,12,0" CornerRadius="4">
            <Grid Padding="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Order Code" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Text="Date" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="2" Text="Final Price" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="3" Text="Status" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="4" Text="Items" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="5" Text="Actions" VerticalAlignment="Center" FontWeight="SemiBold" Width="40"/>
            </Grid>
        </Border>


        <!-- Data List -->
        <ListView Grid.Row="3" 
                  ItemsSource="{Binding Orders}" 
                  SelectionMode="None"
                  Padding="0,0,12,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Order Code -->
                        <TextBlock Grid.Column="0" Text="{Binding OrderCode}" FontWeight="SemiBold" VerticalAlignment="Center"/>

                        <!-- Date -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE787;" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding OrderDate, Converter={StaticResource DateConverter}}" FontSize="12"/>
                        </StackPanel>

                        <!-- Final Price -->
                        <TextBlock Grid.Column="2" Text="{Binding FinalPrice}" FontWeight="Bold" Foreground="Green" VerticalAlignment="Center"/>

                        <!-- Status -->
                        <Border Grid.Column="3" Background="#e0e7ff" CornerRadius="12" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                             <TextBlock Text="{Binding StatusName}" Foreground="Blue" FontSize="12" FontWeight="Medium"/>
                        </Border>

                        <!-- Total Items -->
                        <TextBlock Grid.Column="4" Text="{Binding TotalItems}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                        <!-- Actions -->
                        <Button Grid.Column="5" Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE712;"/>
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="View Details"/>
                                    <MenuFlyoutItem Text="Delete" Foreground="Red"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
        <ProgressBar Grid.Row="3" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" VerticalAlignment="Top"/>
    </Grid>
</Page>

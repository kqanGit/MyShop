<Page
    x:Class="MyShop_Frontend.Views.Pages.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:MyShop_Frontend.ViewModels.Orders"
    xmlns:converters="using:MyShop_Frontend.Helpers.Converters"
    xmlns:controls="using:MyShop_Frontend.Views.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:OrderViewModel/>
    </Page.DataContext>
    
    <Page.Resources>
         <converters:DateToFormattedStringConverter x:Key="DateConverter"/>
         <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
         <converters:StatusToPayVisibilityConverter x:Key="StatusToPayVisibilityConverter"/>
         <converters:PriceConverter x:Key="PriceConverter"/>
        <!-- Add other converters if needed -->
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8F1;" Foreground="#5D5FEF" FontSize="22"/>
                <TextBlock Text="Order Management"
                           FontSize="24"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <controls:AppButton Grid.Column="1"
             Click="CreateOrder_Click"
             VerticalAlignment="Center"
             Height="40">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- plus icon -->
                    <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    <TextBlock Text="Create Order" FontWeight="SemiBold"/>
                </StackPanel>
            </controls:AppButton>
        </Grid>

        <!-- Filters -->
        <StackPanel Grid.Row="1" Spacing="12" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Stretch">
                <StackPanel Width="240">
                    <TextBlock Text="Search" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox PlaceholderText="Search by Order Code..." 
                              Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Width="200">
                    <TextBlock Text="From Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <CalendarDatePicker HorizontalAlignment="Stretch" Date="{Binding FromDate, Mode=TwoWay}" PlaceholderText="mm/dd/yyyy"/>
                </StackPanel>

                <StackPanel Width="200">
                    <TextBlock Text="To Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <CalendarDatePicker HorizontalAlignment="Stretch" Date="{Binding ToDate, Mode=TwoWay}" PlaceholderText="mm/dd/yyyy"/>
                </StackPanel>

                <Button Content="Refresh" Command="{Binding ClearFilterCommand}" VerticalAlignment="Bottom" Style="{StaticResource SecondaryButtonStyle}" Height="36"/>
            </StackPanel>

            <!-- Paging footer compact -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <TextBlock Text="{Binding PagingStatus}" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
                <Button Content="&lt;" Command="{Binding PrevPageCommand}" ToolTipService.ToolTip="Previous Page" Style="{StaticResource SecondaryButtonStyle}" Height="32" MinWidth="32"/>
                <Button Content="&gt;" Command="{Binding NextPageCommand}" ToolTipService.ToolTip="Next Page" Style="{StaticResource SecondaryButtonStyle}" Height="32" MinWidth="32"/>
            </StackPanel>
        </StackPanel>


        <!-- Header Row -->
        <Border Grid.Row="2" Background="#F3F4F6" Height="44" Margin="0,0,12,0" CornerRadius="6" Padding="12,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ORDER CODE" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#6B7280"/>
                <TextBlock Grid.Column="1" Text="DATE" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#6B7280"/>
                <TextBlock Grid.Column="2" Text="FINAL PRICE" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#6B7280"/>
                <TextBlock Grid.Column="3" Text="STATUS" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#6B7280"/>
                <TextBlock Grid.Column="4" Text="ITEMS" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#6B7280"/>
                <TextBlock Grid.Column="5" Text="ACTIONS" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#6B7280" Width="60"/>
            </Grid>
        </Border>

        <!-- Data List -->
        <ListView Grid.Row="3" 
                  ItemsSource="{Binding Orders}" 
                  SelectionMode="None"
                  Padding="0,0,12,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="6" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Order Code -->
                            <TextBlock Grid.Column="0" Text="{Binding OrderCode}" FontWeight="SemiBold" VerticalAlignment="Center"/>

                            <!-- Date -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE787;" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding OrderDate, Converter={StaticResource DateConverter}}" FontSize="12"/>
                            </StackPanel>

                            <!-- Final Price -->
                            <TextBlock Grid.Column="2" Text="{Binding FinalPrice, Converter={StaticResource PriceConverter}}" FontWeight="Bold" Foreground="Green" VerticalAlignment="Center"/>

                            <!-- Status -->
                            <Border Grid.Column="3" Background="#e0e7ff" CornerRadius="12" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                 <TextBlock Text="{Binding StatusName}" Foreground="Blue" FontSize="12" FontWeight="Medium"/>
                            </Border>

                            <!-- Total Items -->
                            <TextBlock Grid.Column="4" Text="{Binding TotalItems}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            <!-- Actions -->
                            <Button Grid.Column="5" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Padding="8">
                                <FontIcon Glyph="&#xE712;"/>
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="View Details" Click="ViewDetails_Click" CommandParameter="{Binding}"/>
                                        <MenuFlyoutItem Text="Pay" Click="PayOrder_Click" CommandParameter="{Binding}" Visibility="{Binding StatusName, Converter={StaticResource StatusToPayVisibilityConverter}}"/>
                                        <MenuFlyoutItem Text="Cancel" Click="CancelOrder_Click" CommandParameter="{Binding}" Visibility="{Binding StatusName, Converter={StaticResource StatusToPayVisibilityConverter}}"/>
                                        <MenuFlyoutItem Text="Delete" Foreground="Red" Click="DeleteOrder_Click" CommandParameter="{Binding}"/>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
        <ProgressBar Grid.Row="3" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" VerticalAlignment="Top"/>
    </Grid>
</Page>

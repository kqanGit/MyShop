<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MyShop_Frontend.Views.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop_Frontend.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctrls="using:MyShop_Frontend.Views.Pages"
    mc:Ignorable="d"
    Title="LoginPage">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Welcome Section -->
        <Grid Grid.Column="0">
            <Image  Source="/Assets/LoginImage.jpg" Stretch="UniformToFill"
                    HorizontalAlignment="Right"/>
            <StackPanel Spacing="15">
                <TextBlock Text="MyShop 2.6.2"
               Foreground="#101010"
               Opacity="0.75"
               FontSize="20"
               FontWeight="Bold"
               Margin="20"
               VerticalAlignment="Top"/>

                <TextBlock Foreground="#FFFFFF"
                           FontSize="100"
                           FontWeight="Bold"
                           Margin="20"
                           LineHeight="110"
                           LineStackingStrategy="BlockLineHeight">
                    <Run Text="Welcome"/>
                    <LineBreak/>
                    <Run Text="Back!"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Login Form -->
        <Grid Grid.Column="1" Background="#E6E8FF">
            <StackPanel Width="380" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="18">
                <TextBlock Text="Login"
                           FontSize="34"
                           Foreground="#151D48"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           Foreground="#000000"
                           Opacity="0.5"
                           FontSize="16"/>
                <TextBox Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
                         Foreground="Black"
                         Background="#FFFFFF"
                         BorderBrush="#80000000"
                         BorderThickness="1.2"
                         Height="50"
                         CornerRadius="16">
                </TextBox>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="#000000"
                           Opacity="0.5"
                           FontSize="16"/>
                <PasswordBox x:Name="PasswordInput"
                             PasswordChanged="PasswordInput_PasswordChanged"
                             Foreground="Black"
                             Background="#FFFFFF"
                             BorderBrush="#80000000"
                             BorderThickness="1.2"
                             Height="50"
                             CornerRadius="16"/>
                
                <!--Remember me-->
                <CheckBox Content="Remember me" Foreground="Black" />
                
                <!-- Sign In Button -->
                <ctrls:HandButton Content="Sign In"
                        Height="45"
                        Width="380"
                        Background="#5D5FEF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        CornerRadius="16"
                        Command="{x:Bind ViewModel.SignInCommand }">
                </ctrls:HandButton>

                <!-- Create account -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="New user?"  
                               VerticalAlignment="Center" 
                               Foreground="#6B6796"/>
                    <HyperlinkButton Content="Create new account" 
                                     VerticalAlignment="Center" 
                                     Foreground="blue"/>
                </StackPanel>
                
                <!-- Config server -->
                <HyperlinkButton Content="Config server" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Bottom" 
                                 Margin="0,50,0,8" 
                                 Foreground="blue"/>
                
            </StackPanel>
        </Grid>
    </Grid>

</Window>

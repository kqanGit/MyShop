<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MyShop_Frontend.Views.Windows.ServerConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop_Frontend.Views.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:MyShop_Frontend.Views.Controls"
    xmlns:shapes="using:Microsoft.UI.Xaml.Shapes" 
    mc:Ignorable="d"
    Title="ServerConfigWindow">

    <Grid x:Name="Root" Background="#F2F1FF">
        <!-- DECORATION (không bắt sự kiện chuột) -->
        <Grid IsHitTestVisible="False">
            <!-- Vòng tròn lớn bên trái -->
            <shapes:Ellipse Fill="#5D5FEF"
                            Width="550" Height="550"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="-330,40,0,0"/>

            <!-- chấm tròn nhỏ -->
            <shapes:Ellipse Fill="#A7A8F9" Opacity="0.55"
                            Width="50" Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="95,450,0,0"/>

            <!-- Góc phải trên -->
            <Grid   HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="200"
                    Height="300"
                    IsHitTestVisible="False"
                    Margin="0,0,0,0"
                    RenderTransformOrigin="0.5,0.5">
                <shapes:Ellipse Fill="#5D5FEF" Width="300" Height="300" Margin="-50,-80,0,0"/>
                <shapes:Polygon Fill="white" Points="40,200 40,-20 230,150"/>


            </Grid>

            <!--Góc phải dưới-->
            <Canvas HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="140"
                    Height="140"
                    Margin="0,0,-150,-150"
                    IsHitTestVisible="False"
                    RenderTransformOrigin="0.5,0.5">
                <Canvas.RenderTransform>
                    <RotateTransform Angle="180"/>
                </Canvas.RenderTransform>
                <shapes:Polygon Fill="#5D5FEF" Opacity="0.5" Points="0,220 220,0 400,320"/>
                <shapes:Polygon Fill="#5D5FEF" Points="60,220 220,60 350,280"/>
                <shapes:Polygon Fill="#A7A8F9" Opacity="0.5" Points="66,220 220,66 250,210"/>
            </Canvas>


        </Grid>

        <!-- FORM -->
        <StackPanel Width="380"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="10">

            <TextBlock Text="Server Configuration"
                        
                       FontSize="34"
                       FontWeight="SemiBold"
                       Margin="0,0,0,14"/>

            <TextBlock Text="Server address" Opacity="0.55" FontSize="12"/>
            <TextBox x:Name="ServerAddressBox"
                     Text="192.168.1.15"
                      />

            <TextBlock Text="Port" Opacity="0.55" FontSize="12" Margin="0,6,0,0"/>
            <TextBox x:Name="PortBox"
                     Text="8"
                      />

            <TextBlock Text="D.N.S" Opacity="0.55" FontSize="12" Margin="0,6,0,0"/>
            <TextBox x:Name="DnsBox"
                     Text="8.8.8.8"
                      />

            <CheckBox x:Name="SaveAsDefaultCheckBox"
                      Content="Save this configuration as default"
                      Margin="0,8,0,0"/>

            <StackPanel Orientation="Horizontal"
                        Spacing="10"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0">
                <controls:AppButton Content="Test connection"
                         
                        Click="TestConnection_Click"/>

                <controls:AppButton Content="Reset default"

                        Click="ResetDefault_Click"/>

                <controls:AppButton Content="Save"
                         
                        Click="Save_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Spacing="8"
                        HorizontalAlignment="Left"
                        Margin="0,8,0,0">
                <TextBlock Text="Status:" Opacity="0.6" FontSize="12"/>
                <TextBlock x:Name="StatusText"
                           Text="Connection successful"
                           Opacity="1.5"
                           FontSize="12"
                           />

                <Border Width="16" Height="16"
                        CornerRadius="2"

                        BorderThickness="1"
                        Background="White"
                        Margin="4,0,0,0">
                    <FontIcon Glyph="&#xE73E;"
                              FontFamily="Segoe MDL2 Assets"

                              FontSize="12"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <controls:AppButton Content="Back to Login"
                     
                    Width="320"
                    HorizontalAlignment="Center"
                    Margin="0,12,0,0"
                    Click="BackToLogin_Click"/>
        </StackPanel>
    </Grid>

</Window>

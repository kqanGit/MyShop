<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop_Frontend.Views.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop_Frontend.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:MyShop_Frontend.Views.Controls"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="380"
          Margin="0,0,0,40">
        
        <StackPanel Spacing="20">
            
            <!-- Title -->
            <TextBlock 
                Text="Login"
                FontSize="36"
                Foreground="#1E293B"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

            <!-- Error Message -->
            <Border Background="#FEE2E2"
                    BorderBrush="#FCA5A5"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12"
                    Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE7BA;" 
                              Foreground="#DC2626" 
                              FontSize="14"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                               Foreground="#DC2626"
                               FontSize="13"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Username Field -->
            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Username"
                    Foreground="#374151"
                    FontSize="14"
                    FontWeight="Normal"/>
                <TextBox 
                    x:Name="UsernameInput"
                    Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText=""
                    Foreground="#1E293B"
                    Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Height="48"
                    Padding="12,12"
                    CornerRadius="16"
                    FontSize="14"/>
            </StackPanel>

            <!-- Password Field -->
            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Password"
                    Foreground="#374151"
                    FontSize="14"
                    FontWeight="Normal"/>
                <PasswordBox 
                    x:Name="PasswordInput"
                    Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                    PlaceholderText=""
                    Foreground="#1E293B"
                    Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Height="48"
                    Padding="12,12"
                    CornerRadius="16"
                    FontSize="14"
                    PasswordChanged="PasswordInput_PasswordChanged"/>
            </StackPanel>

            <!-- Remember Me -->
            <CheckBox 
                Content="Remember me" 
                IsChecked="{x:Bind ViewModel.RememberMe, Mode=TwoWay}"
                Foreground="#374151"
                FontSize="14"
                Margin="0,4,0,0"/>

            <!-- Sign In Button -->
            <controls:AppButton
                x:Name="SignInButton"
                Height="48"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                CornerRadius="16"
                Click="SignInButton_Click"
                IsEnabled="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}">
                <Grid>
                    <!-- Normal State -->
                    <TextBlock Text="Sign In"
                               Foreground="White"
                               FontSize="15"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    <!-- Loading State -->
                    <StackPanel Orientation="Horizontal" 
                                Spacing="8" 
                                HorizontalAlignment="Center"
                                Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ProgressRing IsActive="True" 
                                      Width="20" 
                                      Height="20" 
                                      Foreground="White"/>
                        <TextBlock Text="Signing in..."
                                   Foreground="White"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </controls:AppButton>

            <!-- Config Server Link -->
            <HyperlinkButton 
                Content="Config server" 
                HorizontalAlignment="Right"
                Margin="0,20,0,0" 
                Foreground="#6366F1"
                FontSize="14"
                Padding="0"
                Click="ConfigServerButton_Click"/>

        </StackPanel>
    </Grid>

</Page>
